#!/usr/bin/env bash

# Temporal help command

temporal:help() {
    echo "Temporal Plugin Commands:"
    echo "  create <service> [db-type]     Create a new Temporal service with optional database type (postgres/mysql)"
    echo "  start <service>               Start Temporal service"
    echo "  stop <service>                Stop Temporal service"
    echo "  restart <service>             Restart Temporal service"
    echo "  info <service>                Show Temporal service information"
    echo "  list                          List all Temporal services"
    echo "  link <service> <app>          Link Temporal service to an app"
    echo "  unlink <service> <app>        Unlink Temporal service from an app"
    echo "  exists <service>              Check if Temporal service exists"
    echo "  logs <service> [tail-num]     Show Temporal service logs"
    echo "  enter <service>               Enter Temporal service container"
    echo "  connect <service>             Connect to Temporal service"
    echo "  destroy <service> [--force]   Destroy Temporal service"
}
